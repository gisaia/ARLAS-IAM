###################
# PACKAGING STAGE #
###################
FROM gisaia/arlas-openjdk:17

# install script dependencies
RUN apt-get update && apt-get install -y bash netcat-openbsd curl

# application placed into /opt/app
WORKDIR /opt/app
ADD arlas-iam-core/src/main/resources/templates/*.ftlh /opt/app/
ADD arlas-iam-server/target/arlas-iam-server*.jar /opt/app/arlas-iam-server.jar
ADD conf/configuration.yaml /opt/app/configuration.yaml
ADD docker/docker-resources/start.sh /opt/app/
EXPOSE 9997

HEALTHCHECK --interval=5m --timeout=3s \
  CMD curl http://localhost:9997/admin/healthcheck | grep -v "\"healthy\":false" || exit 1

ENTRYPOINT ["bash", "-c"]
CMD ["/opt/app/start.sh"]
